services:
  app:
    image: '${NIXPACKS_IMAGE}'
    command: 'php artisan migrate --force && php artisan queue:work --daemon & php artisan serve --host=0.0.0.0 --port=8000'
    environment:
      PORT: 8000
    ports:
      - '8000:8000'
    networks:
      - coolify

  reverb:
    image: '${NIXPACKS_IMAGE}'
    command: 'php artisan reverb:start --host=0.0.0.0 --port=8080'
    environment:
      PORT: 8080
    ports:
      - '8080:8080'
    networks:
      - coolify

networks:
  coolify:
    external: true